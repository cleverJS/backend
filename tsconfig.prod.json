{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021"],
    "allowJs": false,
    "outDir": "./build",
    "skipLibCheck": true,
    "rootDir": ".",
    "removeComments": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "noEmit": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build", "core/**/*.spec.ts", "demo/**/*", "tmp", "tests/**/*.spec.ts", "knexfile.ts", "guide/**/*"],
  "include": ["core/**/*"],
  "compileOnSave": false,
  "pretty": true,
  "charset": "utf8"
}
