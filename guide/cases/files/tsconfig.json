{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2019"
    ],
    "allowJs": false,
    "outDir": "./build",
    "rootDir": ".",
    "removeComments": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "./app/types",
      "node",
      "jest"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "paths": {
      "cleverJS/*": [
        "./node_modules/cleverJS/build/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "runtime"
  ],
  "include": [
    "app/**/*",
    "tests/**/*",
    "migrations/**/*",
    "node_modules/cleverJS/**/*",
    "knexfile.ts"
  ],
  "compileOnSave": false,
  "pretty": true,
  "charset": "utf8"
}
